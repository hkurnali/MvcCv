﻿@model List<MvcCv.Models.Entity.TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string color = "";
    int id = 0;

}



<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->

                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->


                                    @foreach (var item in Model)
                                    {
                                        id = item.ID;

                                        if (id % 2 == 0) { color = "bg-blue"; } else { color = "bg-yellow"; }
                                        <div class="time-label">
                                            <span class="@color">
                                                @item.Tarih
                                            </span>
                                        </div>

                                        <div>
                                            <i class="fas fa-certificate bg-gradient-gray-dark"></i>
                                            <div class="timeline-item">


                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Sertifika/SertifikaGuncelle/@item.ID" class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>
                                                    <a href="/Sertifika/SertifikaSil/@item.ID" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class="timeline-inverse">
                                        </br>
                                        <a href="/Sertifika/SertifikaEkle" class="btn btn-primary">Yeni Sertifika </a>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
</body>
</html>